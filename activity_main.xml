<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0f3e8a"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Add to a Payment Method"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginHorizontal="80dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:src="@drawable/menu" />

        </LinearLayout>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:translationZ="4dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:gravity="center"
                android:padding="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/paypal"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pay with PayPal"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#87CDEE"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:translationZ="4dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:gravity="center"
                android:padding="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/mastercard"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pay with Mastercard"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:buttonTint="#87CDEE"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            android:translationZ="4dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:gravity="center"
                android:padding="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:src="@drawable/visa"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pay with Visa"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:buttonTint="#87CDEE"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Cardholder Name"/>
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:translationZ="4dp"
            app:cardCornerRadius="6dp"
            android:layout_marginHorizontal="30dp"
            app:cardElevation="0dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:text="Guram Jajanidze"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Card Number"/>
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:translationZ="4dp"
            app:cardCornerRadius="6dp"
            android:layout_marginHorizontal="30dp"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">
                <TextView
                    android:layout_weight="2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:text="0000 0000 0000 0000 "
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mastercard"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Valid Thru"/>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:translationZ="4dp"
                    android:marginBottom="10dp"
                    app:cardCornerRadius="6dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:text="03/26"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginVertical="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="CVV"/>
                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:translationZ="4dp"
                    app:cardCornerRadius="6dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:text="000"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="30dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checked="true"
                android:buttonTint="#87CDEE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Remember Card"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:text="By clicking this you agree everything"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAY NOW"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_margin="30dp"
            android:background="#0f3e8a"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
